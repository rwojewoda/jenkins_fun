pipeline {
    agent none
    stages {
        stage('Maven'){
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
        stages {

                 stage('Deploy') {
                     steps {
                         echo 'Deploying....'
                     }
                 }
            }
        }

        stage('Remote SSH') {
            agent any
            steps {
                sshagent(['pi_key']) {
                    sh 'ssh -o StrictHostKeyChecking=no pi@192.168.1.12 "echo \$HOME"'
                }
            }
        }
    }
}


