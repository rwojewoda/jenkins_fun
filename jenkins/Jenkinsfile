pipeline {
    agent none
    stages {
        stage('Maven'){
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps{
                stage('Test') {
                            steps {
                                sh 'mvn test'
                            }
                        }
                stage('Build') {
                    steps {
                        sh 'mvn -B -DskipTests clean package'
                    }
                }
                stage('Deploy') {
                    steps {
                        echo 'Deploying....'
                    }
                }
            }
        }

        stage('Remote SSH') {
            steps {
                sshagent(['pi_key']) {
                    // 'myuid@' required for scp (this is from UID jenkins to UID myuid)
                    sh 'ssh -o StrictHostKeyChecking=no pi@192.168.1.17 '
                }
            }
        }
    }
}


